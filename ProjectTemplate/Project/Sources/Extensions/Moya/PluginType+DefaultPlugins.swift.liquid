import Foundation
import Moya

public extension Array where Element == PluginType {

    private static var config = NetworkLoggerPlugin.Configuration(
        logOptions: .formatRequestAscURL
    )

    static var plugins: [PluginType] = [
        NetworkLoggerPlugin(
            configuration: config
        ),
        AccessTokenPlugin(tokenClosure: { _ in
            Defaults.authentication?.accessToken.value ?? ""
        })
    ]
}