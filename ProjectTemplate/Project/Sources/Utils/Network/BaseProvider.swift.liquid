import Foundation
import Moya

protocol APITarget: TargetType, AccessTokenAuthorizable { }

extension APITarget {

    var baseURL: URL {
        Configurations.instance.baseURL
    }

    var headers: [String: String]? {
        let headers: [String: String] = [
            .clientSecret: Configurations.instance.secretKey
        ]

        return headers
    }

    var sampleData: Data { Data() }

    var authorizationType: AuthorizationType? {
        return .bearer
    }
}

extension String {

    static let apiV1Path = "/api/v1"

    static let clientSecret = "X-Client-Secret"
    static let refreshToken = "X-Refresh-Token"
}
