# Setup application category (http://docs.fastlane.tools/actions/deliver/#available-categories)
primary_category 'UNKNOWN'
secondary_category 'UNKNOWN'

# Setup copyright
copyright '{{ year }}, "{{ developer.company }}"'

# Setup price tier
price_tier 0

# Setup app submission info (https://github.com/fastlane/fastlane/blob/master/spaceship/lib/spaceship/tunes/app_submission.rb)
submission_information(
  add_id_info_serves_ads: false,
  add_id_info_tracks_action: false,
  add_id_info_tracks_install: true,
  add_id_info_uses_idfa: true,
  content_rights_contains_third_party_content: false
)

# Setup application rating (http://docs.fastlane.tools/actions/deliver/#available-age-rating-groups)
app_rating_config_path('./fastlane/metadata/app_store_rating_config.json')

# Setup application review information (http://docs.fastlane.tools/actions/deliver/#app_review_information)
app_review_information(
  first_name: 'Firstname',
  last_name: 'Lastname',
  phone_number: '+79999999999',
  email_address: 'foo@bar.com',
  demo_user: 'demo_login',
  demo_password: 'demo_password',
  notes: ''
)
